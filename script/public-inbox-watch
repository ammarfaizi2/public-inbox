use strict;
use warnings;
use PublicInbox::WatchMaildir;
use PublicInbox::Config;
my $config = PublicInbox::Config->new;
my $watch_md = PublicInbox::WatchMaildir->new($config);
if ($watch_md) {
	my $scan = sub { $watch_md->scan };
	$SIG{USR1} = $scan;
	$SIG{ALRM} = sub { $SIG{ALRM} = 'DEFAULT'; $scan->() };
	alarm(1);
	$watch_md->watch;
}
